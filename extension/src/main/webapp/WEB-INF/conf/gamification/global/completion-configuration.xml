<?xml version="1.0" encoding="UTF-8"?>
<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
        xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
    <component>
        <key>org.exoplatform.addons.gamification.service.completation.GamificationCompletionService</key>
        <type>org.exoplatform.addons.gamification.service.completation.GamificationCompletionService</type>
        <init-params>
            <value-param>
                <name>async-execution</name>
                <value>true</value>
            </value-param>
            <value-param>
                <name>thread-pool-size</name>
                <value>5</value>
            </value-param>
            <value-param>
                <name>keepAliveTime</name> <!-- Time in seconds -->
                <value>10</value>
            </value-param>
        </init-params>
    </component>

    <!-- Rules Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ManageRulesEndpoint</type>
    </component>
    <!-- END -->

    <!-- Badges Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ManageBadgesEndpoint</type>
    </component>
    <!-- END -->

    <!-- Reputation Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.UserReputationEndpoint</type>
    </component>
    <!-- END -->

    <!-- Leaderboard Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.LeaderboardEndpoint</type>
    </component>
    <!-- END -->

    <!-- Space Leaderboard Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.SpaceLeaderboardEndpoint</type>
    </component>
    <!-- END -->

    <!-- Gamification API Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.GamificationRestEndpoint</type>
    </component>
    <!-- END -->

    <!-- Configure Job to computed badges earned by each user-->
    <external-component-plugins>
        <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
        <component-plugin>
            <name>AddCronJob</name>
            <set-method>addCronJob</set-method>
            <type>org.exoplatform.services.scheduler.CronJob</type>
            <description>Start computing badges earned by users</description>
            <init-params>
                <properties-param>
                    <name>cronjob.info</name>
                    <description>Start checking condidate badgest</description>
                    <property name="jobName" value="gamificationComputeEarnedBadgesJobt"/>
                    <property name="groupName" value="gamificationJobs"/>
                    <property name="job" value="org.exoplatform.addons.gamification.job.ComputeEarnedBadgesJob"/>
                    <property name="expression"
                              value="${exo.addons.gamification.job.badges.compute.expression:0 0 21 * * ?}"/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
    <!-- Configure Job to distribute badges earned by each user-->
    <external-component-plugins>
        <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
        <component-plugin>
            <name>AddCronJob</name>
            <set-method>addCronJob</set-method>
            <type>org.exoplatform.services.scheduler.CronJob</type>
            <description>Start distributing badges earned by users</description>
            <init-params>
                <properties-param>
                    <name>cronjob.info</name>
                    <description>Start checking condidate badgest</description>
                    <property name="jobName" value="gamificationDistributeEarnedBadgesJobt"/>
                    <property name="groupName" value="gamificationJobs"/>
                    <property name="job" value="org.exoplatform.addons.gamification.job.DistributeEarnedBadgesJob"/>
                    <property name="expression"
                              value="${exo.addons.gamification.job.badges.distribute.expression:0 0 21 * * ?}"/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
</configuration>