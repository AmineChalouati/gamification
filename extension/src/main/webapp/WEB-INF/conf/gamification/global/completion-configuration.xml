<?xml version="1.0" encoding="UTF-8"?>
<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
        xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    <component>
        <key>org.exoplatform.gamification.service.completation.GamificationCompletionService</key>
        <type>org.exoplatform.gamification.service.completation.GamificationCompletionService</type>
        <init-params>
            <value-param>
                <name>async-execution</name>
                <value>true</value>
            </value-param>
            <value-param>
                <name>thread-number</name>
                <value>5</value>
            </value-param>
            <value-param>
                <name>keepAliveTime</name> <!-- Time in seconds -->
                <value>10</value>
            </value-param>
        </init-params>
    </component>

    <!-- Rules Rest Service -->
    <component>
        <type>org.exoplatform.gamification.rest.ManageRulesEndpoint</type>
    </component>
    <!-- END -->

    <!-- Badges Rest Service -->
    <component>
        <type>org.exoplatform.gamification.rest.ManageBadgesEndpoint</type>
    </component>
    <!-- END -->
</configuration>